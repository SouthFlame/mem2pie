<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ff000000">
        <Button
        android:id="@+id/button_takePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text=""
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/camera"/>

    <!--android:background="@drawable/connect"-->

        <!--android:gravity="bottom|center_horizontal"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IPAddress:"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextIPAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:text="192.168.43.1:6624"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
            android:id="@+id/button_connect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CONNECT"
        android:layout_below="@+id/editTextIPAddr"
        android:layout_alignParentStart="true"
        android:background="#ff202020"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView_preview"
        android:background="#ff232323"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/abc_btn_borderless_material"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton"
        style="@android:style/Widget.ImageButton"
        android:elevation="3dp"
        android:background="#ff202020"
        android:onClick="UnityGO (MainActivity)"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

